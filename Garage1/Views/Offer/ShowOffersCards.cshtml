@model List<Offer>

@{

}

<h2>Offers by the garage</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model) {

            <div style="margin:4px auto" class="img-thumbnail col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                        <div><strong>Title :</strong> @item.Title </div>
                        <div><strong>Limit :</strong> @item.Limit</div>
                        <div><strong>Discount :</strong> @item.Discount</div>
                        <div><a href="~/offer/DeleteOffer/@item.ID">Delete</a></div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                        <img class="img-responsive" src="~/Content/offer@(item.Discount).png" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<h5>@Html.ActionLink("Add Offer", "AddOffer", "Offer")</h5>
<h5>@Html.ActionLink("Records View", "Showoffers", "Offer")</h5>