@model List<Package>
@using Garage1.Models
@{
    int turn = 0;
}

<h2>Packages By the garage</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model) {

            <div style="" class="img-thumbnail col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                        <div><strong>Title :</strong> @item.Title </div>
                        <div><strong>Price For Day :</strong> @item.PriceForDay EGP</div>
                        @if (item.packageIsAvailable() == false) {
                            <div class="text-danger"><strong>&bull; Not Available</strong></div>
                        }
                        else {
                            <div class="text-success"> <strong>&bull; Available</strong></div>
                        }
                        <br />
                        <span class="text-warning"><a href="~/package/deletePackage/@item.ID">Delete</a></span>
                        @if (item.packageIsAvailable()) {
                            <span>  |  <a href="~/package/Reservepackage/@item.ID">Reserve</a></span>
                        }
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                        <img class="img-responsive" src="~/Content/CarPackage@(turn%4+1).png" />
                    </div>
                </div>
            </div>
            turn++;
        }
    </div>
</div>

<h5>@Html.ActionLink("Add Package", "AddPackage", "Package")</h5>
<h5>@Html.ActionLink("Records View", "ShowPackage", "Package")</h5>