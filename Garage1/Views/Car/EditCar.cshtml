@model Car
@{
    ViewBag.Title = "AddCar";
    SelectList list = new SelectList(Enum.GetNames(typeof(Brand)) , Model.Brand);
}


<div class="container">
    <div class="row">

        <div class="col-lg-offset-2 col-lg-6">
            <h2>Edit @Model.Title Details</h2>
            <br />
            <form method="post" action="/Car/EditCar/@Model.ID">

                @Html.LabelFor(m => Model.Title)
                <div class="text-danger">@Html.ValidationMessageFor(m => m.Title)</div>
                @Html.EditorFor(m => Model.Title, new { htmlAttributes = new { @class = "form-control" } })
                <br />

                @Html.LabelFor(m => Model.PriceForDay)
                <div class="text-danger">@Html.ValidationMessageFor(m => m.PriceForDay)</div>
                @Html.EditorFor(m => Model.PriceForDay, new { htmlAttributes = new { @class = "form-control" } })
                <br />

                @Html.LabelFor(m => Model.Brand)
                <div class="text-danger">@Html.ValidationMessageFor(m => m.Brand)</div>
                @Html.DropDownListFor(m => Model.Brand, list, new { @class = "form-control" })
                <br />

                <input type="submit" class="form-control btn btn-success" , value="Save Changes" />
            </form>
        </div>

        <div class="col-lg-4">
            <img src="~/Content/car.png" class="img-responsive" />
        </div>
    </div>
</div>

